# Server Configuration
NODE_ENV=development
PORT=2000
API_VERSION=v1

# Database
MONGODB_URI=mongodb://localhost:27017/nero
MONGODB_TEST_URI=mongodb://localhost:27017/nero_test

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this
JWT_REFRESH_EXPIRES_IN=30d

# SMS Verification
SMS_VERIFICATION_EXPIRY=600000

# Kavenegar SMS Gateway (for OTP)
# Get your API key from: https://panel.kavenegar.com/client/setting/account
KAVENEGAR_API_KEY=your-kavenegar-api-key-here
# OTP template name (create in Kavenegar panel under "Lookup" section)
# The template should have a %token placeholder for the OTP code
KAVENEGAR_OTP_TEMPLATE=verify

# CORS
# Single origin
# CORS_ORIGIN=http://localhost:5173
# Multiple origins (comma-separated)
# For production, include your domain:
# CORS_ORIGIN=https://takemyphoto.xyz,http://localhost:2000,http://localhost:5174,http://localhost:5173
CORS_ORIGIN=http://localhost:2000,http://localhost:5174,http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760
MAX_FILES_PER_REQUEST=5

# OpenAI API
OPENAI_API_KEY=your-openai-api-key-here

# Google AI Studio API (for image generation with Gemini 2.5 Flash Image)
GOOGLE_AI_API_KEY=your-google-ai-api-key-here
API_BASE_URL=http://localhost:2000

# AI Service (Optional - for future integration)
AI_SERVICE_URL=https://api.example.com
AI_SERVICE_API_KEY=your-ai-service-key

# Admin Panel (for seeding initial admin user)
ADMIN_EMAIL=admin@nero.com
ADMIN_PASSWORD=admin123
ADMIN_NAME=Admin

# Yekpay Payment Gateway
YEKPAY_MERCHANT_ID=your-32-digit-merchant-id-here
YEKPAY_SANDBOX=true
FRONTEND_URL=http://localhost:5173
